# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[*.bat]
indent_style = tab
end_of_line = crlf

[*.json]
indent_size = 2

[*.lua]
indent_size = 2

[*.md]
indent_size = 2

[*.yaml]
indent_size = 2
